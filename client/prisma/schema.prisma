generator client{
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid()) @map("_id")
  name          String
  email         String   @unique
  hashedPassword String?
  avatar        String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  papers        Paper[]
}

model Paper {
  id        String   @id @default(cuid()) @map("_id")
  subject   String
  file_url  String
  markscheme_url String
  marks     Int
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  paper_questions PaperQuestion[] @relation
}

model Question {
  id        String  @id @default(cuid()) @map("_id")
  subject   String
  topic     String
  marks     Int
  difficulty Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  mark_scheme_url String
  question PaperQuestion[] @relation
}

model PaperQuestion {
  id      String  @id @default(cuid()) @map("_id")
  paperId String
  questionId String
  paper   Paper   @relation(fields: [paperId], references: [id])
  question Question @relation(fields: [questionId], references: [id])
}